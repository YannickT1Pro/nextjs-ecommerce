generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String  @id @default(cuid()) @map("_id")
  title       String
  description String
  imageURL    String
  category    String
  price       Float
  featured    Boolean

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
}

model Category {
  id        String @id @default(cuid()) @map("_id")
  billboard String
  category  String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
}

model Billboard {
  id        String @id @default(cuid()) @map("_id")
  billboard String
  imageURL  String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
}
